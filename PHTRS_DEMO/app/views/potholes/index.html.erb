<p id="notice"><%= notice %></p>

<h1>Listing Potholes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>District</th>
      <th>Address</th>
      <th>Location</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @potholes.each do |pothole| %>
      <tr>
        <td><%= pothole.name %></td>
        <td><%= pothole.district %></td>
        <td><%= pothole.address %></td>
        <td><%= pothole.location %></td>
        <td><%= pothole.size %></td>
        <td><%= link_to 'Show', pothole %></td>
        <td><%= link_to 'Edit', edit_pothole_path(pothole) %></td>
        <td><%= link_to 'Destroy', pothole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

